<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.nandor.blutetest.TalkActivity" android:nestedScrollingEnabled="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="1" android:nestedScrollingEnabled="true">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Connecting to Device"
                android:id="@+id/textView" android:layout_gravity="center_horizontal"
                android:textSize="26dp" android:textAlignment="center" android:background="#9fbafe"
                android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp"
                android:paddingBottom="5dp"/>
        <TextView
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView2" android:layout_gravity="center_horizontal" android:textAlignment="center"
                android:textSize="21dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Send Messages"
                android:id="@+id/textmsg" android:layout_gravity="center_horizontal"
                android:textSize="26dp" android:textAlignment="center" android:background="#9fbafe"
                android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp"
                android:paddingBottom="5dp" android:visibility="visible"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:layout_gravity="center_horizontal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Command"
                android:id="@+id/button2" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sent Commands"
                android:id="@+id/textViewCommands" android:layout_gravity="center_horizontal" android:textAlignment="center"
                android:textSize="21dp"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:id="@+id/listView" android:textAlignment="center" android:clickable="true"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Received Messages"
                android:id="@+id/textrec" android:layout_gravity="center_horizontal"
                android:textSize="26dp" android:textAlignment="center" android:background="#9fbafe"
                android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp"
                android:paddingBottom="5dp" android:visibility="visible"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="155dp"
                android:id="@+id/listView2" android:textAlignment="center" android:clickable="true"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>
